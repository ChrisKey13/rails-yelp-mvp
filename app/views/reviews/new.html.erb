<h1>Pour le restaurant: <%= @restaurant.name %> </h1>
<p>Your new review</p>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
